{
    "name": "@stasm/chain-reaction",
    "version": "0.0.1",
    "description": "Chain explosions to clear the screen",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stasm/chain-reaction.git"
    },
    "contributors": [
        "Staś Małolepszy <stas@piesku.com>"
    ],
    "license": "ISC",
    "scripts": {
        "compile": "tsc",
        "compile:watch": "tsc --watch -p .",
        "deploy": "npx gh-pages -d ./public/opt/",
        "lint": "prettier --check \"src/**/*.ts\"",
        "pretty": "prettier --write \"src/**/*.ts\"",
        "serve": "live-server --port=1234 --no-browser --quiet public",
        "start": "npm-run-all --parallel compile:watch serve"
    },
    "devDependencies": {
        "live-server": "1.2.1",
        "npm-run-all": "4.1.5",
        "prettier": "1.18.2",
        "rollup": "1.19.4",
        "terser": "4.3.1",
        "typescript": "3.5.1"
    }
}
